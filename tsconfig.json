{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ES2019",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": false,
    "jsx": "react",
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*", "typings/*.d.ts"],
  "exclude": ["dist", "static"]
}
